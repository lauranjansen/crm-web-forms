<body>
	<header>
		<h1>Edit Contact</h1>
	</header>
	<main>
		<form action="/contacts" method="post">
			<input type="hidden" name="_method" value="put">
			<div class="input-group">
				<span class="input-group-addon" id="basic-addon1">First Name</span>
				<input class="form-control" type="text" name="first_name" class="textbox" placeholder="John"/>
			</div>
			<div class="input-group">
				<span class="input-group-addon" id="basic-addon1">Last Name</span>
				<input class="form-control" type="text" name="last_name" class="textbox" placeholder="Smith"/>
			</div>
			<div class="input-group">
				<span class="input-group-addon" id="basic-addon1">Email&nbsp;&nbsp;&nbsp;<i class="fa fa-envelope-o fa-fw"></i></span>
				<input class="form-control" type="email" name="email" class="textbox" placeholder="john@smith.com"/>
			</div>
			<div class="input-group">
				<span class="input-group-addon" id="basic-addon1">Note</span>
				<input class="form-control" type="text" name="note" class="textbox" placeholder="Extra information"/>
			</div>
			<input class="btn btn-default" type="submit" value="Add New Contact">
		</form>
	</main>
</body>